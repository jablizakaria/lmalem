		<div class="txt-holder bg-light">
			<header class="header">
				<span class="title text-uppercase">Nous contacter</span>
				<h2 class="heading text-uppercase">Laissez nous un message <br>& nous reviendrons vers vous dès que possible</h2>
				<span class="border2"><img src="<%= image_path("border2.png") %>" alt="image description" class="img-responsive"></span>
			</header>
			<!-- contact form of the page -->
			<div class="contact-form">
				<form id="contactForm" data-toggle="validator">
					<fieldset>
						<div class="form-group">
							<input type="text" id="txtname" class="form-control lg-round" placeholder="Votre nom" required data-error="NEW ERROR MESSAGE">
						</div>
						<div class="form-group">
							<input type="email" id="txtemail" class="form-control lg-round" placeholder="Votre Email" required data-error="NEW ERROR MESSAGE">
						</div>
						<textarea id="txtmessage" placeholder="Votre Message" required data-error="NEW ERROR MESSAGE"></textarea>
						<div id="msgSubmit" class="form-message hidden"></div>
						<button class="btn-primary lg-round text-center text-uppercase" type="submit" id="form-submit">Envoyer</button>
					</fieldset>
				</form>
			</div>
			<!-- contact form of the page end -->
		</div>
	</section>
