<%= content_for :css_content do %>

    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet' />
     <link href='https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css' rel='stylesheet' />

<% end %>

<p id="notice"><%= notice %></p>

<h2>Mes Spécialitées: </h2>

<table id="myexample3" class="table table-striped table-bordered" style="width:100%  margin-top: 10px">
  <thead>
    <tr>
      <th>Description</th>
      <th>Ponctuation</th>
      <th>Efficacité</th>
      <th>Comportement</th>

      <th>Spécialité</th>

<th colspan="2" style="text-align: center;">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users_specialities.each do |users_speciality| %>
      <tr>
        <td><%= users_speciality.description %></td>
        <td><%= users_speciality.avg_punctuation %></td>
        <td><%= users_speciality.avg_efficacy %></td>
        <td><%= users_speciality.avg_behaviour %></td>

        <td><%= users_speciality.speciality.name %></td>

        <td colspan="2"><%= link_to 'Modifier', edit_users_speciality_path(users_speciality) , class: "btn btn-success btn-sm" , style: "margin-left:12px ;margin-right: 4px"%>
          <%= link_to 'Supprimer', users_speciality, class: "btn btn-success btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter une nouvelle spécialitée', new_users_speciality_path , class: "btn btn-success" %>




<script src='https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js'></script>
<script src='https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js'> </script>

<%= content_for :js_content do %>



<script>


  $(document).ready(function() {
    $('#myexample3').DataTable({
        "order": [[ 3, "desc" ]]
    } );


} );
  </script>
<% end %>

