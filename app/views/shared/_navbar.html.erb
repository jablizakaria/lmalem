    <div class="home-message">
        <div class="word3">le plus efficace</div>
        <div class="word2">le plus proche</div>
        <div class="word1">.ML</div>
    </div>
  </h1>
 -->
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->


      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="hover">
          <span>
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %> <%= current_user.first_name %>
          </span>
          <%= link_to '<i class="fas fa-user"></i>'.html_safe, user_profile_edit_path(current_user.id), class: "social-link" %>

          <%= link_to '<i class="fas fa-lock"></i>'.html_safe, edit_user_registration_path, class: "social-link"  %>

          <%= link_to '<i class="fas fa-toolbox"></i>'.html_safe, users_specialities_path, class: "social-link"  %>

          <%= link_to  destroy_user_session_path, method: :delete, class: "social-link" do %>
            <i class="fas fa-sign-out-alt"></i> Sign out
          <% end %>

        </div>

      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <div class="navbar-wagon-item">
        <div class="hover">
          <span>
            Se connecter
          </span>
          <%= link_to '<i class="fas fa-sign-in-alt"></i> Se connecter '.html_safe, new_user_session_path, class: "social-link" %>

        </div>

      </div>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
