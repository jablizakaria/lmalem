<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
<div id="login" class="container">
  <div class="row-fluid">
    <div class="span12">
      <div class="login well well-small">
        <div class="center">
          <%= image_tag "logo.png" %>
        </div>
        <!-- <form action="/users/sign_in" style="" class="login-form" id="UserLoginForm" method="post" accept-charset="utf-8"> -->
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="control-group">
            <div class="input-prepend">
              <span class="add-on"><i class="icon-user"></i></span>
                 <%#= f.input :email,label: false,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", required: "required", placeholder: "Adresse email", maxlength: "255", type: "text", id: "UserUsername" } %>
              <input name="user[email]" required="required" placeholder="Adresse email" maxlength="255" type="text" id="UserUsername">
            </div>
          </div>
          <div class="control-group">
            <div class="input-prepend">
              <span class="add-on"><i class="icon-lock"></i></span>
              <input name="user[password]" required="required" placeholder="Mot de passe" type="password" id="UserPassword">
            </div>
          </div>
          <div class="control-group">
            <label id="remember-me">
              <input type="checkbox" name="data[User][remember_me]" value="1" id="UserRememberMe"> Se souvenir de moi?</label>
          </div>
          <div class="control-group">
            <input class="btn btn-primary btn-large btn-block" type="submit" value="Se connecter">
          </div>
          <%= render "devise/shared/links" %>
        <!-- </form> -->
        <% end %>
      </div><!--/.login-->
    </div><!--/.span12-->
  </div><!--/.row-fluid-->
</div><!--/.container-->




